<script src="https://cdn.tiny.cloud/1/q0kzpipqhk68lm10jszycgringtmyob5iqbxc6vkl9kh1noc/tinymce/5/tinymce.min.js"
    referrerpolicy="origin"></script>
<script src="/js/course-edit.js"></script>
</script>
{{/section}}
<!-- Content Wrapper. Contains page content -->
<div id="add-courses" class="container">
    <!-- Content Header (Page header) -->
    <section class="content-header mt-lg-5">
        <div class="container-fluid">
            <div class="row mb-2 justify-content-center">
                <div>
                    <h1 class="font-weight-bold">Publish your Course to everyone</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    {{#with course}}
    <section class="content container mt-lg-1">
        <div class="card card-primary">
            <div class="card-header" style="background-color: #d82a4e;">
                <h3 class="card-title font-weight-bold">Edit your course</h3>
            </div>
            <form action="" method="POST" id="frmEditCourse">
                <div class="card-body">
                    <div class="d-flex flex-column">
                        <label for="courseName">Your course's name</label>
                        <div class="input-group form-group ml-2">
                            <input id="courseName" type="text" class="form-control" name="courseName" value="{{Name}}"
                                data-id="{{Id}}" readonly>
                        </div>
                        <label for="courseImage">Your course's image</label>
                        <div class="input-group form-group ml-2 row align-items-center">
                            <div class="card-body col-sm-6">
                                <div class="form-group">
                                    <img src="/public/courses/{{Image}}" alt="courseImage">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <p>Make your course stand out with a great image from our design team based on your
                                    preferences and style. <br>
                                    If you create your image, it must meet our course image quality standards to be
                                    accepted <br>
                                    Important guildlines: 1000x675 pixels; .jpg, .jpeg, .gif, or .png</p>
                                <a href="/teacher/{{Id}}/contents/upload" class="btn btn-primary">BROWSE</a>
                            </div>
                        </div>

                        <label for="categories">Which category does your course belong to?</label>
                        <div class="form-group input-group">
                            <select id="categories" class="form-control custom-select ml-2" name="categories">
                                {{#each ../category as |item|}}
                                <option value="{{item.Id}}">{{item.Name}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <label for="price">How much does your course cost? (dollars)</label>
                        <div class="form-group input-group">
                            <div class="input-group form-group ml-2">
                                <input id="price" type="text" class="form-control" name="price" value="{{Price}}">
                            </div>
                        </div>

                        <label for="price">Does your course have a discount? (dollars)</label>
                        <div class="form-group input-group">
                            <div class="input-group form-group ml-2">
                                <input id="discount" type="text" class="form-control" name="discount"
                                    value="{{DiscountPrice}}">
                            </div>
                        </div>
                        <label for="about">Write some sentences about your course</label>
                        <div class="form-group input-group">
                            <textarea class="form-control custom-select ml-2" name="shortDes" id="shortDes" cols="30"
                                rows="5">{{ShortDes}}</textarea>
                        </div>
                        <label for="about">Write exactly what student will learn from your course</label>
                        <div class="form-group input-group">
                            <textarea class="form-control custom-select ml-2" name="detailDes" id="detailDes" cols="30"
                                rows="10">{{DetailDes}}</textarea>
                        </div>
                        <div>
                            <a class="btn btn-danger font-weight-bold" target="_blank"
                                href="/teacher/{{Id}}/contents">See your
                                course's content</a>
                        </div>
                        <div class="form-group align-self-center">
                            <input type="submit" value="Save" class="btn btn-danger">
                        </div>
                    </div>
                </div>
        </div>
        </form>
</div>

</section>
{{/with}}
<!-- /.content -->
</div>