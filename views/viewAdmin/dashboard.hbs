<script type="text/javascript" src="/styles/admin/main.js"></script>
<script>
    var ctx1 = document.getElementById('myChart1').getContext('2d');
    var ctx = document.getElementById('myLineChart').getContext('2d');
    var NameOrder = document.getElementById('NameOrder').getAttribute('value');
    var TotalOrder = document.getElementById('TotalOrder').getAttribute('value');
    //Parse Name & Order========================= 
    var i;
    var flag = 0;
    var text = "";
    var No = [];
    var To = [];
    NameOrder = NameOrder + ',';
    TotalOrder = TotalOrder + ',';
    for (i = 0; i < NameOrder.length && flag < 10; i++) {
        if (NameOrder[i] != ',') {
            text += NameOrder[i];
        }
        else if (NameOrder[i] == ',') {
            No.push(text);
            text = "";
            flag += 1;
        }

    }
    for (i = 0; i < TotalOrder.length; i++) {
        if (TotalOrder[i] != ',') {
            text += TotalOrder[i];
        }
        else if (TotalOrder[i] == ',') {
            To.push(text);
            text = "";
        }

    }
    //Parse Name & Order End======================
    var totalStudent = [12, 13, 15];
    var myChart1 = new Chart(ctx1, {
        type: 'bar',
        data: {
            labels: No,
            datasets: [{
                label: 'Order',
                data: To,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });

    var myChart2 = new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: No,
            datasets: [{
                label: '# of Votes',
                data: To,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],

            }]
        },
        options: {

        }
    });
</script>
