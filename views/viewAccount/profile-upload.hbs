<!-- Content Wrapper. Contains page content -->
<div class="container">
    <!-- Content Header (Page header) -->
    <section class="content-header mt-lg-5">
        <div class="container-fluid">
            <div class="row mb-2 justify-content-center">
                <div>
                    <h1 class="font-weight-bold">Public profile</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content container">
        <div class="card card-primary">
            <div class="card-header" style="background-color: #d82a4e;">
                <h3 class="card-title font-weight-bold">Edit Avatar</h3>
            </div>
            <form action="" method="POST" enctype="multipart/form-data">

                <div class="card-body">
                    <div class="form-group">
                        <input id="fuMain" type="file" class="file" data-preview-file-type="text" name="fuMain">
                    </div>
                </div>

                <!-- /.card-body -->
            </form>
        </div>

    </section>
    <!-- /.content -->
</div>