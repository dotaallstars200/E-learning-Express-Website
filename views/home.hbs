<!--Carousel-->

<section class="course-section spadCarousel">
    <div class="container">
        <div class="section-title">
            <h2>Khoá học nổi bật nhất tuần</h2>
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
        </div>
    </div>
</section>




<!-- course section -->
<section class="course-section spad">
    <div class="container">
        <div class="section-title mb-0">
            <h2>Featured Courses</h2>
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
            <p>Các khóa học có số lượng học viên được theo dõi nhiều trong tuần qua</p>
        </div>
    </div>

    <div class="course-warp">
        <ul class="course-filter controls">
            <li class="control active" data-filter="all">All</li>
            <li class="control" data-filter=".finance">Finance</li>
            <li class="control" data-filter=".design">Design</li>
            <li class="control" data-filter=".web">Web Development</li>
            <li class="control" data-filter=".photo">Photography</li>
        </ul>
        <div class="row course-items-area">
            <!-- course -->
            {{#each this.categories}}
            <div class="mix col-lg-3 col-md-4 col-sm-6 {{this.CourType}}">
                <div class="course-item">
                    <div class="course-thumb set-bg" data-setbg="{{this.CourImage}}">
                        <div class="price">Price {{this.CourPrice}}</div>
                    </div>
                    <div class="course-info">
                        <div class="course-text">
                            <h5>{{this.Course}}</h5>
                            <p>Mô tả các kiểu sẽ được ghi ở đây</p>
                            <div class="students">
                                {{this.CourStudent}}
                            </div>
                            <span class="rating"> {{this.CourStar}}/5 </span>
                            {{#starPrint this.CourStar}}
                            {{result}}
                            {{/starPrint}}
                            <span class="numberRating">({{this.CourNumberRating}})</span>
                        </div>
                        <div class="course-author">
                            <div class="ca-pic set-bg" data-setbg="{{this.CourAuImage}}"></div>
                            <p>{{this.CourAuName}},{{this.CourAuRole}}</p>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
<!-- course section end -->
<!-- categories section -->
<section class="categories-section bg-categories spad">
    <div class="container ">
        <div class="section-title">
            <h2 style="color: white;">Top Course Categories</h2>
            <div class="divider-custom divider-light">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
        </div>

        <div class="row">
            {{#each this.topic}}
            <!-- categorie -->
            <div class="col-lg-4 col-md-6">
                <div class="categorie-item">
                    <div class="ci-thumb set-bg" data-setbg="{{this.TopicImage}}"></div>
                    <div class="ci-text">
                        <h5>{{this.TopicType}}</h5>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
<!-- categories section end -->